@using Shared;
@inject NavigationManager uriHelper;

<section class="vh-100">
    <div class="container py-2 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-8 mb-4 mb-lg-0">
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white shift-left">
                            <img src="img/customer.jpeg" alt="Avatar" class="img-fluid my-3 profile-img" />
                            <h4>@UserDto.Username</h4>
                            <button class="btn btn-light bt-lg my-2" @onclick=Refresh>
                                Sign out <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
                                    <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
                                </svg>
                            </button>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6 class="text-bold">Information</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-12 mb-3">
                                        <h6 class="m-0 text-bold">Email</h6>
                                        <p class="text-muted">@UserDto.Email</p>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <h6 class="m-0 text-bold">Name</h6>
                                        <p class="text-muted">@UserDto.Name</p>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <h6 class="m-0 text-bold">Mobile</h6>
                                        <p class="text-muted">@UserDto.PhoneNumber</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter]
    public UserDto UserDto { get; set; }

    private void Refresh()
    {
        uriHelper.NavigateTo("", forceLoad: true);
    }
}