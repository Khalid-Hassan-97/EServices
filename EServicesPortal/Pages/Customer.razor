@using Shared;

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-8 mb-4 mb-lg-0">
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white shift-left">
                            <img src="img/customer.jpeg" alt="Avatar" class="img-fluid my-3 profile-img" />
                            <h5>Welcome, @UserDto.Username</h5>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6>Information</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-12 mb-3">
                                        <h6 class="m-0">Email</h6>
                                        <p class="text-muted">@UserDto.Email</p>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <h6 class="m-0">Name</h6>
                                        <p class="text-muted">@UserDto.Name</p>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <h6 class="m-0">Mobile</h6>
                                        <p class="text-muted">@UserDto.PhoneNumber</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter]
    public UserDto UserDto { get; set; }
}